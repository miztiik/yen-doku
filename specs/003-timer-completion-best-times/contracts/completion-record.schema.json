{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "CompletionRecord",
    "description": "Record of a completed puzzle, stored in localStorage",
    "type": "object",
    "required": ["completedAt", "time", "date"],
    "additionalProperties": false,
    "properties": {
        "completedAt": {
            "type": "integer",
            "minimum": 0,
            "description": "Unix timestamp (ms) when puzzle was completed"
        },
        "time": {
            "type": "integer",
            "minimum": 0,
            "description": "Total elapsed solving time in milliseconds"
        },
        "date": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$",
            "description": "Puzzle date in YYYY-MM-DD format"
        }
    },
    "examples": [
        {
            "completedAt": 1737561600000,
            "time": 273000,
            "date": "2026-01-22"
        }
    ]
}
